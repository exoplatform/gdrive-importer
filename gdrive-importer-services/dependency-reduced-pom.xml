<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>gdrive-importer-parent</artifactId>
    <groupId>org.exoplatform.addons.gdrive-importer</groupId>
    <version>1.0.x-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>gdrive-importer-services</artifactId>
  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.conf</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>com.google.api-client:google-api-client</include>
                  <include>com.google.oauth-client:google-oauth-client</include>
                  <include>com.google.apis:google-api-services-drive</include>
                  <include>com.google.apis:google-api-services-oauth2</include>
                  <include>com.google.http-client:google-http-client-jackson2</include>
                  <include>com.google.http-client:google-http-client</include>
                  <include>com.google.j2objc:j2objc-annotations</include>
                  <include>io.opencensus:opencensus-api</include>
                  <include>io.opencensus:opencensus-contrib-http-util</include>
                  <include>io.grpc:grpc-context</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>com.google.j2objc</pattern>
                  <shadedPattern>org.org.exoplatform.services.cms.clouddrives.gdrive.shaded.google.j2objc</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.google.api</pattern>
                  <shadedPattern>org.org.exoplatform.services.cms.clouddrives.gdrive.shaded.google.api</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>io.opencensus</pattern>
                  <shadedPattern>org.org.exoplatform.services.cms.clouddrives.gdrive.shaded.io.opencensus</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>io.grpc</pattern>
                  <shadedPattern>org.org.exoplatform.services.cms.clouddrives.gdrive.shaded.io.grpc</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
